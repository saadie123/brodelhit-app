    <div class="clearfix"></div>

    {{> navbar}}

    <div id="login_register" class="modal fade login_tabs" role="dialog">
        <div class="modal-dialog">

            <!-- Modal content-->
            <div class="modal-content">
                <!--<div class="modal-header">
                <button type="button" class="close" data-dismiss="modal">&times;</button>
              </div>-->
                <div class="modal-body">
                    <ul class="nav nav-tabs">
                        <li class="active"><a data-toggle="tab" href="#signin">Iniciar Sesion</a></li>
                        <li><a data-toggle="tab" href="#signup">Registrate</a></li>
                    </ul>

                    <div class="tab-content">
                        <div id="signin" class="tab-pane fade in active">
                            <div class="alert alert-danger" role="alert">
                                <ul id="signin-errors"></ul>
                            </div>
                            <form action="" id="signin-form">
                                <div class="form-group">
                                    <label for="signin-username">Usuario o correo eletronico</label>
                                    <input type="text" name="username" class="form-control" id="signin-username">
                                </div>
                                <div class="form-group">
                                    <label for="signin-password">Contrasena</label>
                                    <input type="password" name="password" class="form-control" id="signin-password">
                                </div>
                                <button type="submit" class="btn btn-default">Enter</button>

                                <div class="forget_pass"><a href="#">? Has olvidado la contrasena?</a></div>
                                <div class="sprte">
                                    <span class="zero_point">0</span>
                                </div>
                                <div class="signup_social_btn">
                                    <ul class="list-inline list-unstyled">
                                        <li><a href="/auth/facebook"><i class="fa fa-facebook"></i> Seguir con Facebook</a></li>
                                        <li><a href="/auth/google"><img src="img/google_icon.png"> Seguir con Google</a></li>
                                    </ul>
                                </div>

                            </form>
                        </div>
                        <div id="signup" class="tab-pane fade">
                            <div class="alert alert-danger" role="alert">
                                <ul id="register-errors"></ul>
                            </div>
                            <form action="/" method="POST" id="signup-form">
                                <div class="form-group">
                                    <label for="username">Usuario</label>
                                    <input type="text" class="form-control" name="username" id="signup-username">
                                </div>
                                <div class="form-group">
                                    <label for="name">Nombre completo</label>
                                    <input type="text" class="form-control" name="name" id="signup-name">
                                </div>
                                <div class="form-group">
                                    <label for="signup-email">Correo electronico</label>
                                    <input type="email" class="form-control" name="email" id="signup-email">
                                </div>
                                <div class="form-group">
                                    <label for="signup-pwd">Contransena</label>
                                    <input type="password" class="form-control" name="password" id="signup-pwd">
                                </div>
                                <button type="submit" class="btn btn-default">Registrarme</button>

                                <div class="sprte">
                                    <span class="zero_point">0</span>
                                </div>

                                <div class="signup_social_btn">
                                    <ul class="list-inline list-unstyled">
                                        <li><a href="/auth/facebook"><i class="fa fa-facebook"></i> Seguir con Facebook</a></li>
                                        <li><a href="/auth/google"><img src="img/google_icon.png"> Seguir con Google</a></li>
                                    </ul>
                                </div>

                                <p>Al registrarte aceptas nuestras condiciones sobre Politica de datos y Politica de
                                    cookies.</p>

                            </form>


                        </div>
                    </div>
                </div>
            </div>

        </div>
